<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="CENTER" prefHeight="379.0" prefWidth="320.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.ui.NewAccountUI">
   <children>
      <Label alignment="CENTER" text="Register">
         <font>
            <Font size="20.0" />
         </font>
         <VBox.margin>
            <Insets bottom="25.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="emailTextField" alignment="TOP_LEFT" promptText="email">
         <VBox.margin>
            <Insets bottom="10.0" left="40.0" right="40.0" top="10.0" />
         </VBox.margin>
      </TextField>
      <PasswordField fx:id="passwordField" promptText="password">
         <VBox.margin>
            <Insets bottom="10.0" left="40.0" right="40.0" top="10.0" />
         </VBox.margin>
      </PasswordField>
      <PasswordField fx:id="checkPasswordField" promptText="check password">
         <VBox.margin>
            <Insets bottom="10.0" left="40.0" right="40.0" top="10.0" />
         </VBox.margin>
      </PasswordField>
      <Label fx:id="errorLabel" textFill="RED" />
      <Button mnemonicParsing="false" onAction="#createAccount" text="Create account">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="30.0" />
         </VBox.margin>
      </Button>
      <Button mnemonicParsing="false" onAction="#backToLogin" text="Back to login" />
   </children>
</VBox>
